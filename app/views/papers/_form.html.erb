<%= simple_form_for [@activity, @paper], :html => { :multipart => true } do |f| %>
  <% if @paper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@paper.errors.count, "error") %> prohibited this paper from being saved:</h2>

      <ul>
      <% @paper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2>Speakers</h2>    
  <p>Speaker1 Name: <%= current_user.name %> <%= link_to "Edit Speaker Profile", edit_user_registration_path, class: "btn btn-primary" %></p>
  <p>Speaker2 Name: <%= link_to "Add Another Speaker", "#", class: "btn btn-primary" %></p>
  
  </div>
  
  <h2>Proposals</h2>    
  

  <div class="field">
    <%= f.input :title %><br>
  </div>
  <div class="field">
    <%= f.input :abstract %><br>
  </div>
  <div class="field">
    <%= f.input :outline %><br>
  </div>
  <div class="field">
    <%= f.input :file_name %><br>
    <br>
    <%= "Uploaded File: " if @paper.file_name.present? %>
    <%= link_to "Here", @paper.file_name.url if @paper.file_name.present? %>
  </div>
  <div class="field">
    <%= f.input :status %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
