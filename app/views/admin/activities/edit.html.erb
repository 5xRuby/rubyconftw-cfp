<h1 class="text-center">Create a New Activity</h1>

	<%= simple_form_for [:admin, @activity] do |f| %>
		<h2 class="text-center">1. Fill Basic Information</h1>
		<div class="col-md-8 col-md-offset-2">
			<div class="form-group">
			  <%= f.input :name, class: "form-control", autofocus: true %>
			</div>

			<div class="form-group">
			  <%= f.input :start_date, class: "form-control", html5: true %>
			</div>

			<div class="form-group">
			  <%= f.input :end_date, class: "form-control", html5: true %>
			</div>

      <div class="form-group">
        <%= f.input :event_start_date, class: "form-control", html5: true %>
      </div>

      <div class="form-group">
         <%= f.input :event_end_date, class: "form-control", html5: true %>
      </div>

			<div class="form-group">
				<%= f.input :logo, as: :file, class: "form-control" %>

			</div>

			<div class="form-group">
			  <%= f.input  :description, as: :pagedown,
			  	input_html: { preview: true, rows: 10 }, class: "form-control" %>
			</div>

			<div class="form-group">
			  <%= f.input :term, as: :pagedown,
			  	input_html: { preview: true, rows: 10 },  class: "form-control" %>
			</div>

			<div class="actions text-center">
			  <%= f.button :submit, "Continue" %>
			</div>
		</div>
	<% end %>
