<div class="text-center"><h1>Call For Papers ï¼š</h1></div>
<br>
<% if @activities.empty? %>
	<div class="col-md-10">
		<h2 class="text-center">No Activities Now</h2>
	</div>
<% else %>
<div class="well well-lg col-md-12">
					<h1> <%= Time.now %> </h1>
				</div>
	<div class="col-md-10">
		<% @activities.each do |activity| %>
			<%= link_to activity do %>
					<div class="well well-lg col-md-12">
						<div class="col-md-8">
							<h2><%= activity.name %></h2>
						</div>
						<div class="col-md-4">
							<h5 class="pull-right"><%= activity.start_date %> ~ <%= activity.end_date %></h5>
							 <h1> <%= Time.now.strftime("%Y-%m-%d") %> vs <%= activity.end_date %> </h1>

							
								
							 </h1>
						</div>
						<div class="col-md-12">
							<span class="pull-right"><%= pluralize(activity.papers_count, 'paper') %> now</span>
						</div>
					</div>
			<% end %>
		<% end %>
	</div>
<% end %>
<div class="col-md-2">
</div>