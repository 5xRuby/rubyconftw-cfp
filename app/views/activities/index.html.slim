.col-md-12
  - if @activities.nil?
    h2 No Activities Now
  - else
    .activities
      - @activities.each do |activity|
        .activity
          h2
            - if activity.open?
              = link_to activity.name, activity_path(activity)
            - else
              = activity.name
            small
              = activity.status
          p.date
            span.date #{activity.open_at.to_date} ~ #{activity.close_at.to_date}
          p.count
            = link_to pluralize(activity.papers_count, 'proposal'), activity

